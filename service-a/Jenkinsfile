pipeline {
    agent any
    parameters { 

        string(
            name: 'RELEASE_DIR', 
            defaultValue: '/home/samples',
            description: 'sample'
            )

        // string(
        //     name: 'Time_out', 
        //     defaultValue: '11000',
        //     description: 'Time out in second for the job'
        //     )

	}


    stages {
        stage('Clone sources') {
			git url: 'https://github.com/valerymo/misc.git'

        }

        stage('Run something') {
            steps {
                script {
                    try {
                        sh  ("Hello Jenkins Pipeline" )
                        } 
                    catch (Exception e) {
                        sh ("echo Failed}")
                        currentBuild.result = 'FAILURE'
                    }
                }

            }
        }
    }
}
